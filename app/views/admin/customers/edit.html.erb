<main>
  <div class = "container">
  <h1><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h1>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
        <table class = "table">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :family_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :family_kana %><%= f.text_field :first_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.telephone_field :tel %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存する" %></td>
          </tr>
        </table>
      <% end %>
  </div>
</main>