<main>
  <div class = "container">

    <div class="row">
      <div class="col-9">
        <h3 class="text-center bg-light"><strong><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報</strong></h3>
      </div>
    </div>

    <div class="row make">
      <div class ="col-10">
        <table class ="table table-borderless">
          <tr>
            <th class="www">顧客ID</th>
            <td>
              <%= @customer.id %>
              &emsp;
              <% if @customer.is_deleted == "有効" %>
                <span class="text-success"><strong><%= @customer.is_deleted %></strong></span>
              <% else %>
                <span class="text-danger"><strong><%= @customer.is_deleted %></strong></span>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.family_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.family_kana %><%= @customer.first_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.tel %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row make">
      <div class="col-6">
        <table class ="table table-borderless">
          <tr>
            <td>
            <%=link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-primary"%>
            &emsp;
            <%=link_to "注文履歴一覧を見る", admin_orders_path(@customer.id, order_type: "customer"), class:"btn btn-primary" %>
          </tr>
        </table>
      </div>
    </div>

  </div>
</main>



