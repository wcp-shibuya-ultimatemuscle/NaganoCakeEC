<main>
 <div class="container">
 <div class="row">
  <div class="col-1"></div>
  <div class="col-3">
    <h3 class="text-center bg-light"><strong>ジャンル編集</strong></h3>
  </div>
 </div>
 <!--ジャンル編集フォーム-->
 <div class="row make">
  <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
   <label for="inputGenre"><strong>ジャンル</strong></label>
   <%= f.text_field :type %>
   &emsp;
   <label><%= f.radio_button :is_active, "有効" %>有効</label>
   &emsp;
   <label><%= f.radio_button :is_active, "無効" %>無効</label>
   &emsp;
   <%= f.submit '変更を保存する', class: "btn btn-sm btn-info" %>
  <% end %>
 </div>
 </div>
</main>