<main>
 <div class="container">

 <%# if @genre.errors.any? %>
  <%#= @genre.errors.count %>
  <!--errors prohibited this obj from being saved:-->
  <%# @genre.errors.full_messages.each do |message| %>
    <%#= message %>
  <%# end %>
<%# end %>
 <div class="row">
   <div class="col-5">
     <h3 class="text-center bg-light"><strong>ジャンル一覧・追加</strong></h3>
   </div>
 </div>

 <div class="row make">
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
   <label for="inputGenre"><strong>ジャンル</strong></label>
   <%= f.text_field :type, autofocus: true, id:"inputGenre", placeholder:"ジャンル" %>
   &emsp;
   <label><%= f.radio_button :is_active, "有効" %>有効</label>
   &emsp;
   <label><%= f.radio_button :is_active, "無効" %>無効</label>
   &emsp;
   <%= f.submit '追加', class: "btn btn-sm btn-info" %>
  <% end %>
 </div>





 <div class="row make">
  <div class="col-6">
   <table class="table table-hover">
     <thead class="bg-light">
       <tr>
         <th>ジャンル</th>
         <th>状態</th>
         <th></th>
       </tr>
     </thead>
     <% @genres.each do |genre| %>
     <tbody>
       <tr>
         <td><%= genre.type %></td>
         <td><%= genre.is_active %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-primary btn-sm" %></td>
       </tr>
     </tbody>
     <% end %>
   </table>
  </div>
 </div>

  </div>
 </main>
