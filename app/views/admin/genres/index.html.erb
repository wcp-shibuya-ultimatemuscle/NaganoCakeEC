<div class="container">
<h2>ジャンル一覧・追加</h2>

 <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <label for="inputGenre">ジャンル</label>
  <%= f.text_field :type, autofocus: true, id:"inputGenre", placeholder:"ジャンル" %>
  <label><%= f.radio_button :is_active, "無効" %>無効</label>
  <label><%= f.radio_button :is_active, "有効" %>有効</label>
  <%= f.submit '追加' %>
 <% end %>


 <table class="table table-hover">
   <thead>
     <tr>
       <th>ジャンル</th>
       <th>状態</th>
       <th></th>
     </tr>
   </thead>
   <% @genres.each do |genre| %>
   <tbody>
     <tr>
       <td><%= genre.type %></td>
       <td><%= genre.is_active %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
     </tr>
   </tbody>
   <% end %>
 </table>

 </div>
