<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
          <td><%= order.order_product.quantity %></td>
          <td><%= order.status %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>