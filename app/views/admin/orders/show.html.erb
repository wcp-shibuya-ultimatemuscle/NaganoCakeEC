<!--（管理者）注文履歴詳細画面-->
<div class="container">
  <div class="row">
    <table class="table">
        <tr>
          <th>購入者</th>
          <th>配送先</th>
          <th>支払方法</th>
          <th>注文ステータス</th>
        </tr>
        <tr>
          <td>
            <%#= link_to admin_customer_path do %>
              <%#= @customer.family_name %><%# @customer.first_name %>
            <%# end %>
          </td>
          <td><%#= @order.postal_code %><%#= @order.address %><%#= @order.name %></td>
          <td><%#= @order.status %></td>
          <td>
          <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
            <%#= f.collection_select :status, Order.all, :id, :status %>
            <%#= link_to "更新", admin_order_path %>
          <% end %>
          </td>
        </tr>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead></br>
      <tbody>
      <% @order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.product.name %></td>
          <td><%= (order_product.product.tax_out_price).to_i * 1.1 %></td>
          <td><%= order_product.quantity %></td>
          <td><%= (order_product.product.tax_out_price).to_i * 1.1 * (order_product.quantity).to_i %></td>
          <td>
          <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
            <%= f.collection_select :status, OrderProduct.all, :id, :status %>
            <%= f.submit "更新" %>
          <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
  <div class="row">
    <div class="table">
      <tr><th>商品合計</th><td><%#= (@order.sum).to_i - (@order.shipping).to_i %></td></tr></br>
      <tr><th>送料</th><td><%#= @order.shipping %></td></tr></br>
      <tr><th>請求額合計</th><td><%#= @order.devesum %></td></tr>
    </div>
  </div>