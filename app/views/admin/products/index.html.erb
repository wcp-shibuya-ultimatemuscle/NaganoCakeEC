<div class="container">

<!--新規登録ボタン(右寄せ)-->
<div class="float-right">
 <%= link_to new_admin_product_path do %>
 <h2><i class="fas fa-plus-square"></i></h2>
 <% end %>
</div>

<h3>商品一覧</h3>

<table class="table table-hover table-striped">
   <thead>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
   </thead>
   <% @products.each do |product| %>
   <tbody>
    <tr>
     <!--商品ID-->
     <td>
      <%= product.id %>
     </td>
     <!--商品名-->
     <td>
      <%= link_to admin_product_path(product.id) do %>
       <%= product.name %>
      <% end %>
     </td>
     <!--税抜価格-->
     <td>
      <p><%= product.tax_out_price %></p>
     </td>
     <!--ジャンル-->
     <td>
      <p><%= product.genre.type %></p>
     </td>
     <!--ステータス-->
     <td>
      <%= product.status  %>
     </td>
    </tr>
   </tbody>
   <% end %>
   <%= paginate @products %>
  </table>

 </div>
