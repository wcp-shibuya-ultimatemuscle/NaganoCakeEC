<div class="container position-absolute" style="width: 50%; top:18%; left:29%" >
  <div class="row">
    <p class="bg-light text-dark float-left" style="font-size: 18px">　管理者ログイン　</p>
  </div>
</div>
<div class="container position-absolute" style="width: 50%; top:25%; left:7%" >
  <div class="mx-auto row text-right float-right">
    <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>&emsp;
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x20" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>&emsp;
        <%= f.password_field :password, autocomplete: "current-password", size: "40x20" %>
      </div>
      <br>

      <div class="text-center">
          <%= f.submit "ログイン", :class => "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>