<div class="container">

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th><%= link_to "カートを空きにする", destroy_all_path(id: current_customer.id), method: :delete %></th>
        </tr>
      </thead>
      <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.product.name %></td>
          <td><%= ((cart.product.tax_out_price).to_i * 1.1).round %></td>
          <td>
          <%= form_with model: @cart, url: cart_item_path(cart.id), method: :patch, local:true do |f| %>
            <%= f.number_field :quantity, min: 0, value: cart.quantity %>
            <%= f.submit "変更" %>
          <% end %>
          </td>
          <td><%= ((cart.product.tax_out_price).to_i * 1.1 * (cart.quantity).to_i).round %></td>
          <% @subtotal = ((cart.product.tax_out_price).to_i * 1.1 * (cart.quantity).to_i).round %>
          <% @total = @total + @subtotal %>
          <td><%= link_to "削除する", cart_item_path(cart.id), method: :delete %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける", products_path %>
    <tr><th>合計金額</th><td><%= @total %></td></tr>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む", new_order_path() %>
  </div>
</div>