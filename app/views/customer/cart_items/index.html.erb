<div class="container">
  <div class="row">
    <%= link_to "カートを空きにする", method: :delete %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.product_id.name %></td>
          <td><%= (cart.product_id.tax_out_price).to_i * 1.1 %></td>
          <td>
          <%= form_with model: @product, url: cart_items_path, local:true do |f| %>
            <%= f.number_field :quantity, min: 0 %>
            <%= f.submit "変更" %>
          <% end %>
          </td>
          <td><%= (product.tax_out_price).to_i * 1.1 * (order_product.quantity).to_i %></td>
          <td>
            <%= link_to "削除する", cart_items_path(), method: :delete %>
          </td>
        </tr>
      </tbody>
      <% end %>

    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける", products_path %>
    <tr><th>合計金額</th><td><%#= @order.sum %></td></tr>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む", new_order_path() %>
  </div>
</div>