<main>
  <div class = "container">

    <div class ="row">
      <div class="col-md-5">
        <h3 class="text-center bg-light"><strong>登録情報編集</strong></h3>
      </div>
    </div>

    <div class ="row make">
      <%= form_with model: @customer, url: customer_path(current_customer.id), local: true do |f| %>
      <div class="col-12">
        <table class = "table table-borderless">
          <tbody>
            <tr>
              <th class="we">名前</th>
              <td>(姓)</td>
              <td><%= f.text_field :family_name %></td>
              <td>(名)</td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>(セイ)</td>
              <td><%= f.text_field :family_kana %></td>
              <td>(メイ)</td>
              <td><%= f.text_field :first_kana %></td>
            </tr>
          </tbody>
        </table>
        <table class = "table table-borderless">
          <tbody>
          <tr>
            <th class="he">郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <td><%= f.telephone_field :tel %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          </tbody>
        </table>
        <table class = "table table-borderless text-center">
          <tr>
            <td><%= f.submit "変更を保存する", class: "btn btn-primary" %></td>
            <td><%=link_to "変更を保存しない", customer_path(current_customer.id), class:"btn btn-light" %></td>
            <td><%=link_to "退会する", customers_unsubscribe_path(current_customer.id), class:"btn btn-danger" %></td>
          </tr>
          </tbody>
        </table>
      </div>
      <% end %>
    </div>

  </div>
</main>