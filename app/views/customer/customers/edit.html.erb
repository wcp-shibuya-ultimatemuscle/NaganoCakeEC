<main>
  <div class = "container">
    <div class ="row">
      <h1>登録情報編集</h1>
    </div>

    <div class ="row">
      <%= form_with model: @customer, url: customer_path(current_customer.id), local: true do |f| %>
        <table class = "table">
          <tr>
            <td>名前</td>
            <td>(姓)<%= f.text_field :family_name %></td>
            <td>(名)<%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)<%= f.text_field :family_kana %></td>
            <td>(メイ)<%= f.text_field :first_kana %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td><%= f.telephone_field :tel %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存する", class: "btn btn-primary" %></td>
            <td><%=link_to "変更を保存しない", customer_path(current_customer.id), class:"btn btn-light" %></td>
            <td><%=link_to "退会する", customers_unsubscribe_path(current_customer.id), class:"btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>

  </div>
</main>