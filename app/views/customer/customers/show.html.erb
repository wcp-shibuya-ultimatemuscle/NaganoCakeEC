<main>
  <div class = "container">

    <div class ="row">
      <div class="col-md-5">
        <h3 class="text-center bg-light"><strong>マイページ</strong></h3>
      </div>
    </div>

    <div class ="row make">
      <div class = "col-8">
        <table class="table table-borderless">
          <tr>
            <th><h5><strong>登録情報</strong></h5></th>
            <td>
              <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-primary" %>
              &ensp;
              <%= link_to "パスワードを変更する", edit_customer_registration_path(@customer.id), class:"btn btn-primary" %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class = "row">
      <div class = "col-9">
      <table class = "table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light tytle">氏名</th>
            <td><%= @customer.family_name %> &emsp; <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.family_kana %> &emsp; <%= @customer.first_kana %></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.tel %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>

    <div class ="row">
      <div class = "col-5">
        <table class="table table-borderless">
          <tr>
            <th><h5><strong>配送先</strong></h5></th>
            <td>
              <%= link_to "一覧を見る", receivers_path, class:"btn btn-primary" %>
            </td>
          </tr>
          <tr>
            <th><h5><strong>注文履歴</strong></h5></th>
            <td>
              <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
            </td>
          </tr>
        </table>
      </div>
    </div>



  </div>
</main>
