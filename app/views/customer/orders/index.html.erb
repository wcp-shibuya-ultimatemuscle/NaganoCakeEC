<h5>注文履歴一覧画面</h5>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%#= order.created_at %></td>
            <td><%#= order.postal_code %><%#= order.address %><%#= order.name %></td>
            <td><%#= order.order_product %></td>
            <td><%#= order.sum %></td>
            <td><%#= order.status %></td>
            <td><%#= link_to "表示する", order_path(1) %></td>
          </tr>
        <% end %>
        </tbody>
    </div>
  </div>
</div>