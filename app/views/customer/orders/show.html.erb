<h4>注文履歴詳細画面</h4>

<div class="container">
  <div class="row">
  　<h4>注文情報</h4>
    <table class="table">
      <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
      <tr><th>配送先</th><td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td></tr>
      <tr><th>支払方法</th><td><%= @order.payment %></td></tr>
      <tr><th>ステータス</th><td><%= @order.status %></td></tr>


    </table>
  </div>
  <div class="row">
    <h4>請求情報</h4>
    <table class="table">
      <tr><th>商品合計</th><td><%= @order.sum %></td></tr>
      <tr><th>配送料</th><td><%= @order.shipping %></td></tr>
      <tr><th>ご請求額</th><td><%= (@order.sum).to_i  + (@order.shipping).to_i %></td></tr>
    </table>
  </div>
  <div class="row">
    <h4>商品内容</h4>
    <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% @order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.tax_in_price %></td>
            <td><%= order_product.quantity %></td>
            <td><%= (order_product.tax_in_price).to_i * (order_product.quantity).to_i %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "一覧画面へ戻る", orders_path %>
</div>