
 <div class="container">

 <div class="row">
  <div class="border col-md-3">
   <!--ジャンル検索の部分テンプレート-->
   <%= render 'customer/products/genre', genres: @genres %>
  </div>

  <div class="col-md-9">
    <% if params[:id] %>
     <h2><%= @genre.type %>一覧(全<%= @product.count %>件)</h2><br>
    <% else %>
     <h2>商品一覧(全<%= @product.count %>件)</h2>
    <% end %>
    <div class="item">
     <% @products.each do |product| %>
     <div>
      <!--商品画像-->
      <%= attachment_image_tag product, :image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %><br>
      <!--商品名-->
      <label for="inputName">商品名</label><br>
      <%= link_to product_path(product.id) do %>
      <%= product.name %>
      <% end %><br>
      <!--税抜価格-->
      <label for="inputTaxoutprice">税抜価格</label><br>
      <p><%= product.tax_out_price %>円</p><br>
     </div>
    <% end %>
   </div>
   <%= paginate @products %>
  </div>

 </div>

 </div>