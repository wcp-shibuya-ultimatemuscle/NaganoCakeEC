<div class="container">
 <div class="row make">
  <div class="border col-md-3 bg-success">
   <!--ジャンル検索の部分テンプレート-->
   <%= render 'customer/products/genre', genres: @genres %>
  </div>
  <!--以下、商品一覧部分-->
  <div class="col-md-9">
    <!--全○○件表示-->
    <% if params[:id] %>
     <h2><%= @genre.type %>一覧(全<%= @product.count %>件)</h2><br>
    <% else %>
     <h2>商品一覧(全<%= @product.count %>件)</h2>
    <% end %>
    <!--商品一覧-->
    <div class="item">
     <% @products.each do |product| %>
      <div class="mt-2 mr-2 card border-warning">
       <div>
        <!--商品画像-->
        <%= attachment_image_tag product, :image, size: "150x150", format: 'jpg', fallback: "no_image.jpg", class: "" %><br>
        <!--商品名-->
        <label for="inputName">商品名</label><br>
        <%= link_to product_path(product.id) do %>
         <%= product.name %>
         <% end %><br>
         <!--税抜価格-->
         <label for="inputTaxoutprice">税抜価格</label><br>
         <p><%= product.tax_out_price %>円</p><br>
       </div>
      </div>
     <% end %>
    </div>
   <h4><%= paginate @products %></h4>
  </div>

 </div>

 </div>
