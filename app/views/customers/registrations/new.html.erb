<div class="container">
  <br>
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><span class="bg-secondary text-white">　新規会員登録　</span></h2><br>
    </div>
  </div>
  <div class="row">
    <div class="col-4.5 mx-auto">
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>名前</th>
            <td>(姓)</td>
            <td><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
            <% resource.errors.messages[:family_name].each do |family_name| %>
              <p class= "deviseval alert alert-danger">
                <br>姓<%= family_name %>
              </p>
            <% end %></td>
            <td></td>
            <td>(名)</td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            <% resource.errors.messages[:first_name].each do |first_name| %>
              <p class= "deviseval alert alert-danger">
                <br>名<%= first_name %>
              </p>
            <% end %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>(セイ)</td>
            <td><%= f.text_field :family_kana, autofocus: true, autocomplete: "family_kana" %>
            <% resource.errors.messages[:family_kana].each do |family_kana| %>
              <p class= "deviseval alert alert-danger">
                <br>(セイ)<%= family_kana %>
              </p>
            <% end %></td>
            <td></td>
            <td>(メイ)</td>
            <td><%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
            <% resource.errors.messages[:first_kana].each do |first_kana| %>
              <p class= "deviseval alert alert-danger">
                <br>(メイ)<%= first_kana %>
              </p>
            <% end %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <% resource.errors.messages[:email].each do |email| %>
              <p class= "deviseval alert alert-danger">
                <br>メールアドレス<%= email %>
              </p>
            <% end %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            <% resource.errors.messages[:postal_code].each do |postal_code| %>
              <p class= "deviseval alert alert-danger">
                <br>郵便番号<%= postal_code %>
              </p>
            <% end %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>住所</th>
            <td></td>
            <td colspan="4"><%= f.text_field :address, autofocus: true, autocomplete: "address", size: "57x30" %>
            <% resource.errors.messages[:address].each do |address| %>
              <p class= "deviseval alert alert-danger">
                <br>住所<%= address %>
              </p>
            <% end %></td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
            <% resource.errors.messages[:tel].each do |tel| %>
              <p class= "deviseval alert alert-danger">
                <br>電話番号<%= tel %>
              </p>
            <% end %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %>
            <% resource.errors.messages[:password].each do |password| %>
              <p class= "deviseval alert alert-danger">
                <br>パスワード<%= password %>
              </p>
            <% end %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <% resource.errors.messages[:password_confirmation].each do |password_confirmation| %>
              <p class= "deviseval alert alert-danger">
                <br>パスワード(確認用)<%= password_confirmation %>
              </p>
            <% end %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= f.submit "　　新規登録　　", :class => "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><span class="bg-secondary text-white">　既に登録済の方　<br></span></h2>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-5 mx-auto">
      <div class="form-group"><%= link_to "こちら", new_customer_registration_path %>　からログインしてください。</div>
    </div>
  </div>
</div>
